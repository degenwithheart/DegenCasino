{
  "include": ["src"],
  "exclude": [
    "api",
    "**/*.old.tsx",
    "**/*.broken.tsx",
    "**/WagerConfirmationModal.tsx"
  ],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
    },
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  }
}